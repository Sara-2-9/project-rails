<div class="flex flex-col">
  <div class="flex flex-col">
    <%= form_with local: true do |form| %>
      <div class="form-group flex flex-col">
        <%= form.label 'Context:', class: "text-sm font-bold mb-2 text-blue-500" %>
        <%= form.text_area :context, class: "rounded-md h-40", value: @context %>
      </div>
      <div class="form-group flex flex-col mt-4">
        <%= form.label 'Question:', class: "text-sm font-bold mb-2 text-blue-500" %>
        <%= form.text_area :query, class: "rounded-md h-40", value: @query %>
      </div>
      <%= form.submit 'Get content', class: "text-sm font-bold mt-2 p-4 border w-32 rounded-md bg-gradient-to-r from-sky-300 to-sky-500 hover:from-sky-400 hover:to-sky-600 cursor-pointer" %>
    <% end %>
  </div>

  <div class="mt-10">
    <h2 class="text-sm font-bold mb-2 text-blue-500">Answer:</h2>
    <% flash.each do |key, value| %>
      <p><%= value %></p>
    <% end %>
  </div>
</div>